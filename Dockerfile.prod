FROM golang:1.14 AS build

ENV GO111MODULE=on
WORKDIR /usr/local/go/src/app
RUN go get github.com/google/wire/cmd/wire \
    && go get github.com/githubnemo/CompileDaemon
COPY go.mod .
COPY go.sum .
RUN go mod download
COPY . .
RUN wire
RUN go build -o main .

FROM alpine
WORKDIR /app
COPY --from=build /usr/local/go/src/app/main /app/
ENTRYPOINT ./main

EXPOSE 8000